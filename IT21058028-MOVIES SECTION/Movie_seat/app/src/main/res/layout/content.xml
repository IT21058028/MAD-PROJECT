<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<TextView
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:text="Update Details"
    android:background="@color/black"
    android:textColor="@color/white"
    android:textAlignment="center"
    android:textSize="25sp"
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Movie Name"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_marginTop="20dp"

        />
    <EditText
        android:id="@+id/update_movie_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="moive name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#333131" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Movie Type"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="25sp"

        />

    <EditText
        android:id="@+id/update_movie_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="movie Type"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#333131" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Movie Duration"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="25sp"

        />
    <EditText
        android:id="@+id/update_movie_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="movie Duration"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#333131" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Movie Release Date"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="25sp"

        />

    <EditText
        android:id="@+id/update_release_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="release Date"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#333131" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Update Details"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="25sp"

        />

    <EditText
        android:id="@+id/update_movie_describtion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="movie describtion"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#333131" />

    <Button
        android:id="@+id/btnupdate"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="update Movie"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"/>
</LinearLayout>